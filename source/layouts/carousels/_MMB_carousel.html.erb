    <div class="carousel-item">
      <%= image_tag "MBCalendarSelection_ipadFrame.png", load: "lazy", class: "d-inline-block w-100", data: { toggle: 'modal', target: '#MMB_MODAL' } %>
    </div>
    <div class="carousel-item">
      <%= image_tag "MBCalendarPage_ipadFrame.png", load: "lazy", class: "d-inline-block w-100", data: { toggle: 'modal', target: '#MMB_MODAL' } %>
    </div>
    <div class="carousel-item">
