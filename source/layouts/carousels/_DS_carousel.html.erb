<div id="ds_carousel_controls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active" id="carousel">
      <%= image_tag "DNDSpellsmacbook-laptop-frame.png", load: "lazy", class: "d-inline-block w-100", id: "desktop-image", data: { toggle: 'modal', target: '#DS_MODAL' } %>
    </div>
    <div class="carousel-item">
      <%= image_tag "DNDSpells_vertical_ipad.png", load: "lazy", class: "d-inline-block w-50", data: { toggle: 'modal', target: '#DS_MODAL' } %>
    </div>
    <div class="carousel-item">
      <%= image_tag "DNDSpells_create_vertical_ipad.png", load: "lazy", class: "d-inline-block w-50", data: { toggle: 'modal', target: '#DS_MODAL' } %>
    </div>
    <div class="carousel-item">
      <%= image_tag "DNDspellsRanked_iphone_frame.png", load: "lazy", class: "d-inline-block w-50", data: { toggle: 'modal', target: '#DS_MODAL' } %>
    </div>
  </div>
  <a class="carousel-control-prev" href="#ds_carousel_controls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#ds_carousel_controls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
