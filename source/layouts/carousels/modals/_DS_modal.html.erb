<!-- Modal -->
<div class="modal fade" id="DS_MODAL" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <div id="DS_MODAL_CONTROLS" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <%= image_tag "DNDSpellsmacbook-laptop-frame.png", class: "d-inline-block w-100", id: "desktop-image" %>
            </div>
            <div class="carousel-item">
              <%= image_tag "DNDSpells_vertical_ipad.png", class: "d-inline-block w-100" %>
            </div>
            <div class="carousel-item">
              <%= image_tag "DNDSpells_create_vertical_ipad.png", class: "d-inline-block w-100" %>
            </div>
            <div class="carousel-item">
              <%= image_tag "DNDspellsRanked_iphone_frame.png", class: "d-inline-block w-100" %>
            </div>
          </div>
          <a class="carousel-control-prev" href="#DS_MODAL_CONTROLS" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#DS_MODAL_CONTROLS" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
