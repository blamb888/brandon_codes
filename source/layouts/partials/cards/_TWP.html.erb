<div class="post">
  <div class="post-preview">
    <%= partial 'layouts/carousels/TWP_carousel', class: "post-preview-link" %>
    <%= partial 'layouts/carousels/modals/TWP_modal' %>
  </div>
  <div class="post-content">
    <div class="post-content-title">
      <h1>Tokyo Watch Party&nbsp;<i class="fas fa-video"></i></h1>
    </div>
    <div class="post-content-date">
      <div class="post-content-date-metadata">
        <span>Solo Dev |</span>
